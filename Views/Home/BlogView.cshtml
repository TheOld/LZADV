<body>
    <input type="hidden" id="id" value="0" />
    <div class="content-wrap">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="text-center">Área administrativa</h2>
                        <button id="new-post" class="btn btn-success"><i class="fa fa-add"></i> Novo post</button>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="post-table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Título</th>
                                        <th>Data</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


            <section id="post-editor" class="post-editor-holder container-fluid">
                <div class="post-editor-container ">
                    <a href="#" class="pull-right margin-right-15" id="close-post-editor">Fechar</a>
                    <div class="row">
                        <div class="col-md-12">
                            <h2>Editor</h2>
                        </div>
                    </div>
                    <form id="post-editor-form" class="margin-top-30">
                        <div class="row">
                            <div class="col-md-5">
                                <input id="title" name="title" type="text" required placeholder="Título" />
                            </div>
                            <div class="col-md-5">
                                <select id="category">
                                    <option selected>- Categoria -</option>
                                    <option>Direito Aduaneiro</option>
                                    <option>Direito do Tranbalho e Previdenciário</option>
                                    <option>Direito Marítimo</option>
                                    <option>Direito Tributário</option>
                                    <option>Direito Empresarial</option>
                                    <option>Direito Internacional</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="isActive"> Post ativo?
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <textarea class="post-editor" id="post-body"></textarea>
                            </div>
                        </div>

                        <div class="row margin-top-10">
                            <div class="col-sm-12">
                                <button id="btn-save-post" class="btn btn-default pull-right" type="submit"><i class="fa fa-save"></i>Salvar</button>
                                <button id="cancel-post-edit" class="btn btn-link fg-orange pull-right" type="button">Cancelar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>



