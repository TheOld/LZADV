

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lobo & Vaz Advogados Associados - @ViewBag.Post.Title</title>
    <!-- Bootstrap -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet">


    <link href="../../css/styles.css" rel="stylesheet">
    <link href="../../css/blog.css" rel="stylesheet" />
    <link href="../../css/queries.css" rel="stylesheet">
    <link rel="stylesheet" href="../../css/grid.css" type="text/css">
    <link rel="stylesheet" href="../../css/submitButton.css" type="text/css">
    <link href="~/css/postList.css" rel="stylesheet" />
    <link href="~/css/helpers.css" rel="stylesheet" />
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    @*@Styles.Render("~/Content/css")*@
</head>
<body class="view-single">
    <input type="hidden" id="authorID" value="@ViewBag.User._ID" />
    <section id="theGrid" class="main bg-white">
        <section class="ccontent content--show">
            <div class="scroll-wrap">
                <article class="content__item content__item--show">
                    <span class="category category--full">@ViewBag.Post.Category</span>
                    <h2 class="title title--full">@ViewBag.Post.Title</h2>
                    <div class="meta meta--full">
                        <img class="meta__avatar" src="@ViewBag.Avatar" alt="@ViewBag.User.Name" />
                        <span class="meta__author">@ViewBag.User.Name</span>
                        <span class="meta__date"><i class="fa fa-calendar-o"></i>@ViewBag.Post.Date</span>
                        <span class="meta__misc meta__misc--seperator">
                            <div class="fb-share-button" data-href="http://www.lzadv.com.br/post/postview?id=' + post._ID + '" data-layout="button"></div>
                            
                        </span>
                    </div>
                    <hr />
                    <div>
                        <p>
                            @Html.Raw(ViewBag.Post.Content)
                        </p>
                    </div>
                    <div class="container">

                        <div class="row">
                            <div class="col-md-6">
                                <div id="fb-root"></div>

                                <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
                                <div class="fb-comments" data-href="http://www.lzadv.com.br/post/' + post.Title + '" data-numposts="5"></div>

                                <script>FB.XFBML.parse();</script>

                            </div>
                        </div>
                    </div>
                </article>
                <button class="close-button close-button--show" data-id="@ViewBag.User._ID">
                    <i class="fa fa-close"></i>
                    <span>Fechar</span>
                </button>
            </div>
        </section>
    </section>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins)-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g;
            m.parentNode.insertBefore(a, m);
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-29270391-1', 'auto');
        ga('send', 'pageview');

    </script>





    <!--    <script src="../../js/modernizr.js"></script>-->
    <script src="../../js/modernizr-2.6.2.js"></script>

    <script src="../../js/bootstrap.min.js"></script>

    <script src="../../js/jquery-scrollToTop.js"></script>
    <script src="../../js/classie.js"></script>

    <script src="../../js/velocity.min.js"></script>
    <script src="../../js/velocity.ui.js"></script>
    <script src="~/js/PostView.js"></script>

    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v2.5&appId=436241219912916";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
</body>
</html>
